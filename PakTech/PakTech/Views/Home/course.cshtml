<link rel="stylesheet" type="text/css" href="~/Theme/styles/course.css">
<link rel="stylesheet" type="text/css" href="~/Theme/styles/course_responsive.css">




<div class="course">
    <div class="container">
        <div class="row">

            <!-- Course -->
            <div class="col-lg-8">

                <div class="course_container">
                    <div class="course_title">@Model.Title</div>
                    <div class="course_info d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-start">

                        <!-- Course Info Item -->
                        <div class="course_info_item">
